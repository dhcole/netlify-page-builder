{% set cards = section %}
<ul class="usa-card-group">
  {%- for card in cards -%}
    <li class="usa-card {{ card.classes }}">
      <div class="usa-card__container">
        <header class="usa-card__header">
          <h2 class="usa-card__heading">{{ card.title }}</h2>
        </header>
        {%- if card.media -%}
          <div class="usa-card__media{% if card.media_classes %} {{ card.media_classes }}{% endif %}">
            <div class="usa-card__img{% if card.image_classes %} {{ card.image_classes }}{% endif %}">
              <img src="{{ card.image.image }}" alt="{{ card.image.alt }}">
            </div>
          </div>
        {%- endif -%}
        <div class="usa-card__body">
          {%- block card_body -%}
            {%- if card.content -%}
              <p>{{ card.content }}</p>
            {%- endif -%}
          {%- endblock -%}
        </div>
        <div class="usa-card__footer">
          {%- block card_footer %}
            <a class="usa-button" href="{{ card.button.link }}">{{ card.button.text }}</a>
          {% endblock -%}
        </div>
      </div>
    </li>
  {%- endfor -%}
</ul>
