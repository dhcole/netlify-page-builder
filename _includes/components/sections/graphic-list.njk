{% set content = section %}
<section class="usa-graphic-list usa-section usa-section--{{content.background}}">
  <div class="grid-container">
  {% for item in content.items %}
    {% if loop.index % 2 > 0 %}
    <div class="usa-graphic-list__row grid-row grid-gap">
    {% endif %}
      <div class="usa-media-block tablet:grid-col">
        <img class="usa-media-block__img"  src="{{ item.image.image }}" alt="{{item.image.alt}}" width="124">
        <div class="usa-media-block__body">
          <h2 class="usa-graphic-list__heading">{{ item.heading}}</h2>
          <p>{{item.content}}</p>
        </div>
      </div>
    {% if loop.index % 2 == 0 or loop.last %}
    </div>
    {% endif %}
  {% endfor %}
  </div>
</section>
